{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "types/*": [
        "./@types/*"
      ],
      "assets/*": [
        "assets/*"
      ],
      "config/*": [
        "config/*"
      ],
      "context/*": [
        "context/*"
      ],
      "interfaces/*": [
        "interfaces/*"
      ],
      "modules/*": [
        "modules/*"
      ],
      "routing/*": [
        "routing/*"
      ],
      "services/*": [
        "services/*"
      ],
      "shared/*": [
        "shared/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "padding-horizontal",
            "padding-vertical",
            "margin-vertical",
            "margin-horizontal",
            "tint-color",
            "aspect-ratio",
            "elevation",
            "text-align-vertical"
          ]
        }
      }
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
